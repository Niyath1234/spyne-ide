{
  "title": "Architecture Requirements Document - Loan Management System",
  "version": "1.0",
  "systems": [
    {
      "name": "core_loan_system",
      "description": "Core loan management system",
      "tables": ["loans", "loan_transactions", "loan_schedules"],
      "responsibilities": [
        "Loan origination",
        "Loan servicing",
        "Payment processing"
      ]
    },
    {
      "name": "customer_management_system",
      "description": "Customer information management",
      "tables": ["customer_accounts", "customer_ind_info", "customer_addresses"],
      "responsibilities": [
        "Customer onboarding",
        "Customer data management",
        "Customer verification"
      ]
    }
  ],
  "data_flows": [
    {
      "from_system": "customer_management_system",
      "to_system": "core_loan_system",
      "data_type": "customer_data",
      "frequency": "real-time",
      "tables_involved": ["customer_accounts", "loans"]
    },
    {
      "from_system": "core_loan_system",
      "to_system": "reporting_system",
      "data_type": "loan_transactions",
      "frequency": "daily",
      "tables_involved": ["loan_transactions", "loan_summary"]
    }
  ],
  "interfaces": [
    {
      "name": "customer_to_loan_interface",
      "type": "API",
      "source_table": "customer_accounts",
      "target_table": "loans",
      "mapping": {
        "customer_id": "customer_id",
        "account_number": "customer_account_number"
      }
    }
  ],
  "tables": [
    {
      "name": "loans",
      "system": "core_loan_system",
      "description": "Main loan table"
    },
    {
      "name": "customer_accounts",
      "system": "customer_management_system",
      "description": "Customer account information"
    }
  ],
  "relationships": [
    {
      "from_table": "customer_accounts",
      "to_table": "loans",
      "type": "one-to-many",
      "description": "Customer accounts link to loans via customer_id"
    }
  ]
}

