# RCA Engine Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to git - it contains sensitive credentials

# ============================================================================
# AZURE AD SSO CONFIGURATION (Required for frontend authentication)
# ============================================================================
# Application (client) ID from Azure AD App Registration
VITE_AZURE_CLIENT_ID=your-azure-client-id-here

# Directory (tenant) ID from Azure AD
VITE_AZURE_TENANT_ID=your-azure-tenant-id-here

# Object ID (optional, for reference)
AZURE_OBJECT_ID=your-azure-object-id-here

# ============================================================================
# LLM CONFIGURATION (Required)
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
RCA_DB_TYPE=postgresql
RCA_DB_HOST=localhost
RCA_DB_PORT=5432
RCA_DB_NAME=spyne
RCA_DB_USER=spyne
RCA_DB_PASSWORD=your-database-password-here

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
FLASK_ENV=development
APP_ENV=local

# Backend server configuration
RCA_HOST=0.0.0.0
RCA_PORT=8080
RCA_DEBUG=false
RCA_SECRET_KEY=generate-a-random-secret-key-here
RCA_MAX_CONTENT_LENGTH=16777216
RCA_RATE_LIMIT_RPM=60
RCA_RATE_LIMIT_RPH=1000
RCA_CORS_ORIGINS=*

# Application flags
READ_ONLY_MODE=true
INGESTION_ENABLED=false
