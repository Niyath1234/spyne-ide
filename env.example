# Spyne IDE Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
RCA_LLM_MODEL=gpt-4
RCA_LLM_TEMPERATURE=0.0
RCA_LLM_MAX_TOKENS=3000
RCA_LLM_TIMEOUT=120

# =============================================================================
# Server Configuration
# =============================================================================
RCA_HOST=0.0.0.0
RCA_PORT=8080
RCA_DEBUG=false
RCA_WORKERS=4
RCA_THREADS=4
RCA_TIMEOUT=120
RCA_LOG_LEVEL=info

# =============================================================================
# Security Configuration
# =============================================================================
RCA_SECRET_KEY=change-me-in-production-generate-a-long-random-string
RCA_RATE_LIMIT_RPM=60
RCA_RATE_LIMIT_RPH=1000
RCA_CORS_ORIGINS=*

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
RCA_DB_TYPE=postgresql
RCA_DB_HOST=localhost
RCA_DB_PORT=5432
RCA_DB_NAME=rca_engine
RCA_DB_USER=rca_user
RCA_DB_PASSWORD=change-me

# =============================================================================
# Trino Configuration (Optional - for federated queries)
# =============================================================================
TRINO_COORDINATOR_URL=http://localhost:8080
TRINO_CATALOG=memory
TRINO_SCHEMA=default
TRINO_USER=admin

# =============================================================================
# Observability Configuration
# =============================================================================
RCA_ENABLE_METRICS=true
RCA_ENABLE_TRACING=true

# =============================================================================
# Grafana Configuration (Optional)
# =============================================================================
GRAFANA_PASSWORD=admin

