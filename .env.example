# RCA Engine Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to git - it contains sensitive credentials

# ============================================================================
# AZURE AD SSO CONFIGURATION (Required for frontend authentication)
# ============================================================================
# Application (client) ID from Azure AD App Registration
VITE_AZURE_CLIENT_ID=your-azure-client-id-here

# Directory (tenant) ID from Azure AD
VITE_AZURE_TENANT_ID=your-azure-tenant-id-here

# Object ID (optional, for reference)
AZURE_OBJECT_ID=your-azure-object-id-here

# ============================================================================
# LLM CONFIGURATION (Required)
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
RCA_DB_TYPE=postgresql
RCA_DB_HOST=localhost
RCA_DB_PORT=5432
RCA_DB_NAME=spyne
RCA_DB_USER=spyne
RCA_DB_PASSWORD=your-database-password-here

# Alternative: Use connection string
# POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname

# ============================================================================
# TRINO CONFIGURATION (Optional)
# ============================================================================
TRINO_HOST=localhost
TRINO_PORT=8080
TRINO_USER=admin
TRINO_CATALOG=tpch
TRINO_SCHEMA=tiny

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
FLASK_ENV=development
APP_ENV=local

# Backend server configuration
RCA_HOST=0.0.0.0
RCA_PORT=8080
RCA_DEBUG=false
RCA_SECRET_KEY=generate-a-random-secret-key-here
RCA_MAX_CONTENT_LENGTH=16777216
RCA_RATE_LIMIT_RPM=60
RCA_RATE_LIMIT_RPH=1000
RCA_CORS_ORIGINS=*

# Application flags
READ_ONLY_MODE=true
INGESTION_ENABLED=false

# ============================================================================
# CONFLUENCE CONFIGURATION (Optional)
# ============================================================================
CONFLUENCE_URL=https://slicepay.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@example.com
CONFLUENCE_API_TOKEN=your-confluence-api-token-here
CONFLUENCE_SPACE_KEY=HOR

# ============================================================================
# JIRA CONFIGURATION (Optional)
# ============================================================================
JIRA_URL=https://slicepay.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token-here

# ============================================================================
# SLACK CONFIGURATION (Optional)
# ============================================================================
# Bot Token (Recommended - starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Default channel for notifications
SLACK_DEFAULT_CHANNEL=#general

# Workspace name (optional)
SLACK_WORKSPACE_NAME=your-workspace-name

# Alternative Slack MCP Tokens (if not using bot token)
# XOXC Token (Browser-based - starts with xoxc-)
SLACK_MCP_XOXC_TOKEN=xoxc-your-xoxc-token-here

# XOXD Token (Desktop-based - starts with xoxd-)
SLACK_MCP_XOXD_TOKEN=xoxd-your-xoxd-token-here

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# VECTOR DATABASE CONFIGURATION (Optional)
# ============================================================================
VECTOR_DB_PATH=./data/vector_db
VECTOR_DB_INDEX_PATH=./data/vector_index

# ============================================================================
# KNOWLEDGE BASE PATHS (Optional - defaults shown)
# ============================================================================
KNOWLEDGE_BASE_PATH=metadata/knowledge_base.json
KNOWLEDGE_REGISTER_PATH=metadata/knowledge_register.json
PRODUCT_INDEX_PATH=metadata/product_index.json

# ============================================================================
# OTHER LLM PROVIDERS (Optional)
# ============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# LOGGING & DEBUGGING (Optional)
# ============================================================================
LOG_LEVEL=INFO
DEBUG=false
